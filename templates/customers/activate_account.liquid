<div class="cx-width cx-activate-account">
  <div class="content-block">
    <h1>Activate Account</h1>
    <p>Create your password to activate your account.</p>
    {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}
    <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer_area.forms.password' | t }}">
    <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer_area.forms.confirm_password' | t }}">
    <input type="submit" class="activate-btn" value="{{ 'customer_area.forms.activate' | t }}">
    <input type="submit" class="decline-btn" name="decline" value="{{ 'customer_area.forms.decline' | t }}">
    {% endform %}
  </div>
</div>

<style>
  html {
  	font-size: 10px;
  }
  .cx-width {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .cx-activate-account .content-block {
  	width: 100%;
    margin: 30px auto 0;
    text-align: center;
  }
  
  .cx-activate-account .content-block h1 {
    font-size: 1.875em;
    margin: 0 0 .625em;
    line-height: 1.1;
    color: #030303;
    padding: 0;
    font-family: Lato,HelveticaNeue,"Helvetica Neue",sans-serif;
  }
  
  .cx-activate-account .content-block p {
    padding: 0;
    letter-spacing: .7px;
    color: #000;
    line-height: 1.375;
    margin: 0 0 30px;
    font-family: Montserrat,sans-serif;
    font-size: 13px;
  }
  
  .cx-activate-account .content-block input {
    font-size: 13px;
    letter-spacing: .65px;
    padding: 13px 25px;
    font-weight: 400;
    display: block;
    width: 100%;
    margin: 0 0 20px;
    background-color: #fff;
    max-width: 100%;
    line-height: 1.375;
    border-radius: 0;
    border:0;
    border-bottom: 1px solid #e6e6e6;
    font-family: Karla, HelveticaNeue, "Helvetica Neue", sans-serif;
  }
  
  .cx-activate-account .content-block input::placeholder {
    color: #000;
    font-family: 'Montserrat';
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 10px;
  }
  
  .cx-activate-account .content-block .activate-btn {
    margin: 0;
