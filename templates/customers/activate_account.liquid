    cursor: pointer;
    display: inline-block;
    width: 100%;
    border: 0;
    line-height: 1.375;
  }
  
  .cx-activate-account .content-block .activate-btn:hover {
  	background-color: #a02e30;
    color: #fff;
  }
  
  .cx-activate-account .content-block .decline-btn {
    background-color: #fff;
    color: #c63b3d;
    border: 0;
    margin: 0 0 20px;
    padding: 15px 14px;
    font-size: 14px;
    font-weight: 400;
