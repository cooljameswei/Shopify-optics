.page-width{
	padding: 0;
    max-width: 1070px;
}
div:not(.booster--revert)>h1.product__title{
	font: normal normal 600 22px/27px Montserrat;
    letter-spacing: 0;
    color: #000;
    margin-bottom: 9px;
}
.jdgm-widget.jdgm-preview-badge .jdgm-prev-badge__text{
	font: normal normal normal 14px/16px Montserrat;
    letter-spacing: .65px;
    margin-left: 10px;
    color: #0c0c0c;
}
.hide_mobile.pdp-wishlist-icon.swym-button{
	width: 60px;
}
.no-gap.checkout--dynamic{
	display:none;
}

.button.button--addToCart{
	font: normal normal 600 14px/21px Montserrat;
    letter-spacing: .7px;
    text-transform: uppercase;
    padding: 12px 15px;
	border-color: transparent;
    transition: all .4s;
	border-radius: 0;
	background-color: #c63b3d;
    color: #fff;
	width: calc(100% - 65px);
}
.quantity--input{
	border:0px;
	align-items: center;
}
.quantity--input .label-txt{
	margin-bottom:13px;
	margin-right:10px;
}
.quantity--input .quantity--input__input{
	font: normal normal 500 14px/24px Montserrat;
    letter-spacing: 2.8px;
    color: #000;
    outline: 0;
    text-transform: uppercase;
    pointer-events: none;
    background: 0 0;
    padding: 0;
    width: 40px;
    text-align: center;
    height: 36px;
    min-height: auto;
	border: 1px solid #fff;
    border-radius: 0;
    max-width: 100%;
}
.quantity--input .quantity--input__button{
	background: #ebebeb;
    border: 0;
    width: 36px;
    height: 36px;
	font-size: 22px;
    font-family: Karla,HelveticaNeue,"Helvetica Neue",sans-serif;
    color: #666;
    line-height: 1.375;
	border-radius:5px;
	padding: 0px 10px;
}

.product__atc .quantity--input{
	margin-bottom:32px;
}
.swym-button-bar.swym-wishlist-button-bar.swym-inject{
	display:none;
}
.swatches__holder select{
	border: 1px solid #e6e6e6;
	width:100%;
}
.main-content .grid__item{
	padding-top:0px;
}
.product__row--default .gallery{
	flex-direction: column-reverse;
	max-width: 50%;
}
.row.product__row.product__row--default{
	flex-wrap: nowrap;
}
.product__row--default .gallery .gallery__thumbnails{
	padding: 7px 15px;
	height: 100%;
	max-height:fit-content;
	flex-direction:row;
	flex-shrink: 1;
	align-items: center;
}
.gallery__thumbnails .gallery__thumbnail{
	border: 1px solid #f8f8f8;
	margin-right: 15px;
}
.gallery__thumbnails span.gallery__thumbnail:hover,
.gallery__thumbnails .gallery__thumbnail.bstrSlider__thumb--active{
	opacity:1;
	border:1px solid #ccc;
}
.gallery.gallery__default .slider--product__holder{
	width:100%;
	border: 1px solid #ccc;
	max-height: 300px;
}
.slider--product .slide--product {
    height: 100%;
}
.slider--product__holder .slide--product img{
	object-fit:contain;
	max-height:298px;
}
.product__row--default.page-width{
	margin-bottom: 30px;
}
.product__atc{
	display:block;
}
.product__page--info{
	padding-left:100px;
}
.product__price.jsPrice{
	color: #000;
    font: normal normal 600 30px/37px Montserrat;
    letter-spacing: 1.5px;
}
.product__swatches .swatches__holder h4.swatches__title{
	font-size: .75em;
    font-weight: 700;
    color: #666;
    text-transform: uppercase;
    margin-bottom: 13px;
}
.product__price--holder{
	margin-bottom:20px;
}
form.shopify-product-form h1.product__title{
	font: 600 22px/27px Montserrat;
    letter-spacing: 0;
    color: #000;
	margin-bottom:15px;
}
.product__sku,
.product__sku label,
.product__sku span{
	margin-top:20px;
	margin-bottom:20px;
	font: 13px/24px Montserrat!important;
    letter-spacing: 0;
    color: #242424;
}
.product__price-- .product__price--old{
	margin-left: 15px !important;
}
.product__atc .product__atc-container .quantity--input{
	margin-bottom:20px;
	margin-right:25px;
}
.product__atc .product__atc-container .quantity--input label.label-txt{
	text-align:left;
}
.product__price--holder .jsPrice{
			
}
.pdp-btn-addcart-wishlist{
		width:70%;
}
.misc-row {
	align-items: flex-start;
}
.misc-row .product__title, 
.misc-row .product__price--holder, 
.misc-row .product__atc, 
.misc-row .product__countdown--holder, 
.misc-row .product__description, 
.misc-row .product__stock, 
.misc-row .product__accordion, 
.misc-row .product__tags, 
.misc-row .product__review-stars, 
.misc-row .product__urgency, 
.misc-row .product__swatches, 
.misc-row .product__share {
    margin-bottom: 10px;
}
.pb-15{
	pading-bottom:15px;
}
@media(max-width:1100px){
	.col-12.unflex.page-width{
		padding:15px;
	}
	.product__page--info{
		padding-left:30px;
	}
	.main-content .page-width{
		padding:0px 15px;
	}
}
@media(max-width:1023px){
	.pdp-btn-addcart-wishlist{
		width:100%;
	}		
}
@media (max-width: 991px){
  .accordion {
      font: normal normal 500 14px/18px Montserrat;
      letter-spacing: 1.4px;
      color: #2b2e34;
      text-transform: uppercase;
      background: #fff;
      display: block;
      position: relative;
      padding: 16px 0;
      border-bottom: 1px solid #9f9f9f;
  }
  .desktop_hide.pdp-wishlist-icon + .dflex{
		display: block;
	}	
	.dflex .product-single__meta-list:before{
		display:none;
	}
	.product__atc-container .addtocart__button {
    	width: 58%;
	}
	.pdp-btn-addcart-wishlist .button.button--addToCart{
		width:auto;
	}
}
@media(max-width:767px){
	.product__page--info{
		padding-left:12px;
	}
	.row.product__row.product__row--default{
		flex-wrap: wrap;
	}
	.product__row--default .gallery{
		max-width: 100%;
	}
	.grid__item.product-desc .tab-content{
		border:none;
		padding:0px;
	}
	#MainContent .dflex .jdgm-widget.jdgm-preview-badge{
		float: none;
	}
	.col-12.unflex.page-width{
		position:relative;
	} 
	form.shopify-product-form{
		position:relative;
	}
	form.shopify-product-form h1.product__title{
		font-size: 18px;
        padding-right: 50px;
        line-height: 22px;
	}
	.product__atc .product__atc-container,
	.pdp-btn-addcart-wishlist .button.button--addToCart{
		width:100%;
	}
	.product__atc .quantity--input{
		width:auto;
	}
	.product__atc-container .addtocart__button{
		width:48%;
	}
	.product__price--holder span.jsPrice{
		font-size: 20px;
    	line-height: 24px;
	}
	.product__sku, .product__sku label, .product__sku span{
		margin-top: 10px;
    	margin-bottom: 10px;
	}
	.judgeme_review{
		margin-bottom:15px;
	}
   .product__atc .product__atc-container .quantity--input{
		margin-right:10px;
	}
	.unflex#product--page,
	.grid__item.product-desc,
	.related-products-con .section-header{
		padding:0px;
	}
	form.shopify-product-form .desktop_hide.pdp-wishlist-icon.swym-button.swym-add-to-wishlist-view-product{
	  position: absolute;
      right: 0;
      top: 0;
	}
	.gallery.gallery__default .slider--product__holder{
		max-height:300px !important;
	}
   .pdp-btn-addcart-wishlist .button.button--addToCart{
       margin:0px;
   }
   #MainContent .shopify-product-form .product__atc .product__atc-container{
     align-items: flex-end;
   }
   .gallery__thumbnails .gallery__thumbnail{
     padding:8px;
   }
}
.product-single__meta-list .inStockMsg {
    font: 700 14px/24px Montserrat!important;
    color: #006eff;
}
.product-single__meta-list .ship-tooltip {
    font-family: "Font Awesome 5 Free"!important;
}

.product-single__meta-list * {
    font: 13px/24px Montserrat!important;
    letter-spacing: 0;
    color: #242424;
}