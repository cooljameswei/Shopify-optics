html {
	font-size: 10px;
}

.main-content .contact-page-section {
	margin-top: {{section.settings.margin-top_desktop}};
}

.contact-section p, .contact-section span {
	color: #666;
}

.contact-section h1 span, .contact-section h2 span, .contact-section h3 span, .contact-section h4 span, .contact-section h5 span, .contact-section h6 span, .contact-section p span, .contact-section div span {
    color: inherit;
}

.contact-section table tr:hover {
    background-color: transparent;
}

body .main-content .contact-section * {
	font-family: Karla,HelveticaNeue,"Helvetica Neue",sans-serif;
	font-style: initial;
}

.contact-section div:not(.booster--revert)>h4,
.contact-section div:not(.booster--revert)>h4,
.contact-section h4, .main-content .h4 {
    margin-top: 40px;
    font-size: 1.125em;
    color: #030303;
}
.contact-section div:not(.booster--revert)>h5, 
.contact-section div:not(.booster--revert)>h5, 
.contact-section h5, .main-content .h5 {
    font-size: 1.25em;
}

.contact-section div:not(.booster--revert)>h1, 
.contact-section div:not(.booster--revert)>h2, 
.contact-section div:not(.booster--revert)>h3, 
.contact-section div:not(.booster--revert)>h4, 
.contact-section div:not(.booster--revert)>h5, 
.contact-section div:not(.booster--revert)>h6 {
    font-family: Karla,HelveticaNeue,"Helvetica Neue",sans-serif;
    line-height: 1.1;
    margin-bottom: 0.625em;
    font-weight: bold;

    {% if section.settings.pageTitleHeaderColor %}
    color: {{section.settings.pageTitleHeaderColor}};
    {% endif %}
}
.contact-section div:not(.booster--revert)>h2, .main-content h2 {
    font-size: 1.875em;
}

.contact-page-section .contact-section {
    width: 100%;
    margin: auto;
    {% if section.settings.max_width %}
    max-width: {{section.settings.max_width}};
    {% endif %}

    {% if section.settings.pageContentColor %}
    color: {{section.settings.pageContentColor}};
    {% endif %}

    padding: 0 2rem;
}

.contact-page-section .contact-section:after {
    content: '';
    display: table;
    clear: both;
}

{% if section.settings.content_padding %}
.content-block {
	padding: {{section.settings.content_padding}};
}
{% endif %}

.main-content .contact-page-section .contact-section a {
    {% unless section.settings.enable_link_colors %}
    color: {{section.settings.linksColor}};
    {% endunless %}
    text-decoration: none;
    background-color: transparent;
    transition: color .1s ease-in,background-color .1s ease-in;
}
.main-content .contact-page-section .contact-section a:hover {
    background-color: transparent;
    {% unless section.settings.enable_link_colors %}
    color: {{section.settings.linksHoverColor}};
    {% endunless %}
}

body .main-content .contact-section h1 {
	font-size: 2.25em;
    font-weight: bold;
    font-family: Lato,HelveticaNeue,"Helvetica Neue",sans-serif;
}
.block-container {
	display: flex;
}
.content-block {
	width: 50%;
	padding: 30px;
}

.contact-section .rte {
    display: flex;
    justify-content: space-between;
}

.contact-section .rte-half {
	line-height: 1.375;
}
.contact-section address, .contact-section address p {
	line-height: 1.42857143;
}

.content-block .rte-half {
    padding-right: 30px;
}

.contact-section #contact_form input {
    width: 100%;
    border-radius: 0;
    display: block;
    margin-bottom: 10px;
    padding: 13px 15px;
}

.contact-section #contact_form input::placeholder, 
.contact-section #contact_form textarea::placeholder {
	color: #aaa;
}

.contact-section #contact_form select {
	border-radius: 0;
    background-color: #fff;
    font-size: 14px;
    color: #4b5354;
    border: 1px solid #9f9f9f;
    padding: 4px 9px 4px 10px;
    height: 26px;
    font-family: Montserrat,sans-serif;
	width: 100%;
	margin-bottom: 10px;
}

.contact-section #contact_form textarea {
    min-height: 100px;
	width: 100%;
    margin-bottom: 10px;
	padding: 13px 15px;
	border-radius: 0;
	line-height:1.375;
}

.contact-section #contact_form .send-btn {
	cursor: pointer;
	font-size: .8125em;
    font-weight: 700;
    letter-spacing: .15em;
    text-transform: uppercase;
    padding: 15px 45px;
	color: white;
	background-color: #c63b3d;
    transition: color .1s ease-in,background-color .1s ease-in;
}

.contact-section #contact_form .send-btn:hover {
	background-color: #a02e30;
}

.map-container {
	position: relative;
    padding-bottom: 56.25%;
    padding-top: 30px;
    height: 0;
    overflow: hidden;
    margin-top: 30px;
}
.map-container iframe {
	position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.form-success {
    background-color: #59ac6c;
    color: #fff !important;
}

.errors, .form-success {
        padding: 13px;
    margin: 0 0 10px;
}
@media(max-width: 1200px) {
	.contact-section .rte {
		display: block;
	}
}

@media(max-width: 750px) {
	.contact-section .rte {
		display: block;
	}
	.content-block {
		width: 100%;
	}
	.block-container {
		display: block;
	}
	.contact-section .rte {
		display: flex;
	}
	.contact-section .rte .rte-half {
		padding-right: 15px;
	}	
}

@media(max-width: 550px) {
	.contact-section .rte {
		display: block;
	}
	.contact-section .rte .rte-half {
		padding-right: 0;
	}	

}