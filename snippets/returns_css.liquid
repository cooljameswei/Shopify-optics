.returns-page {
	font-family: Lato, sans-serif;
	width:100%;
	margin:25px auto 30px;
}

.returns-page h1.page-title {
	text-align: center !important;
	font-family: Lato, sans-serif;
	font-weight: 600;
	letter-spacing: 0;
	position: relative;
	margin: 0;
	text-transform: uppercase;
	margin-bottom: 30px;
}

.returns-page h1.page-title:after {
	content: url(https://cdn.shopify.com/s/files/1/0046/6966/9491/t/7/assets/heading-before.png);
	position: absolute;
	bottom: -37px;
	left: 0;
	right: 0;
}

.return-header-banner {
	background: url(https://cdn.shopify.com/s/files/1/2807/8986/files/returns-bg.png?v=1578074567) no-repeat;
	background-size: cover;
	height: 375px;
	position: relative;
	margin-top: 20px;
}

.return-header-text-wrap {
	position: absolute;
	left: 60px;
	top: 160px;
}

.returns-page div:not(.booster--revert) .return-header-text-wrap h1 {
	color: #fff;
	margin: 0 0 10px 0;
	font-size: 50px;
	font-family: Lato, HelveticaNeue, "Helvetica Neue", sans-serif;
	font-weight: 700;
}

.returns-page div:not(.booster--revert) .return-header-text-wrap p {
	color: #fff;
	font-size: 25px;
}

.main-content .returns-page h2 {
	font-family: Karla, HelveticaNeue, "Helvetica Neue", sans-serif;
}

.return-step-sec {
	margin-top: 70px;
}

.return-step-sec .row {
	margin: 0px;
}

.return-step {
	box-shadow: 0 0 5px 5px rgb(0 0 0 / 5%);
	padding: 10px;
	min-height: 350px;
	margin-bottom: 95px;
	position: relative;
}

.return-step img {
	position: absolute;
	margin-left: calc(40% - 54px);
	margin-top: -72px;
}

.main-content .page-content-width .rte p,
.main-content div:not(.booster--revert)>p { 
	font-family: Lato, sans-serif !important;
	text-align: left;
	font-size: 16px;
	color: #666;
	line-height: 1.375
}

.return-step p {
	margin-top: 85px !important;
	text-align: center !important;
}

.main-content p:last-child {
	margin-bottom: 0;
}

body .main-content .returns-page.page-content-width .rte>p,
body .main-content .returns-page.page-content-width .rte>span{
	font-family: Lato, sans-serif;
}

.returns-page .full-form-wrapper {
	/*background-image: linear-gradient(to right, #c63b3e, #902629);*/
	padding: 50px 10px;
}

.page-width {
	/*------As per the new requiremnet TW#33265426-----*/
    max-width: 1350px;
	margin: 0 auto;
	padding: 0 10px;
}

.returns-page div:not(.booster--revert) .form-title h3 {
	text-align: center;
	color: #000 !important;
	font-size: 27px;
	margin-bottom: 20px;
	font-family: Karla, HelveticaNeue, "Helvetica Neue", sans-serif;
	font-weight: 700;
}

.label--hidden {
	position: absolute;
	height: 0;
	width: 0;
	margin-bottom: 0;
	overflow: hidden;
	clip: rect(1px, 1px, 1px, 1px);
}

.main-content label[for] {
	cursor: pointer;
}

.contact-form input,
.contact-form textarea {
	padding: 13px 15px;
	background-color: #f4f4f4;
	color: #333;
	border: 0;
	max-width: 100%;
	font-size: 16px;
	font-family: Karla, HelveticaNeue, "Helvetica Neue", sans-serif;
	line-height: 1.375;
	border-radius: 0px;
	display: block;
	width: 100%;
	margin-bottom: 10px;
}

.contact-form select {
    display: block;
    width: 100%;
    margin-bottom: 10px;
    background-color: #fff;
    font-size: 14px;
    color: #4b5354;
    border: 1px solid #9f9f9f;
    padding: 4px 16px 5px 10px;
    height: 42px;
    font-family: Montserrat, sans-serif;
    border-radius: 7px;
}

.contact-form .btn {
	display: inline-block;
	width: auto;
	text-decoration: none;
	text-align: center;
	vertical-align: middle;
	white-space: nowrap;
	cursor: pointer;
	border: 1px solid transparent;
	-moz-user-select: none;
	-ms-user-select: none;
	-webkit-user-select: none;
	user-select: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
	background-color: #c63b3d;
	color: #fff;
}

.contact-form .send-btn {
	display: inline-block;
	font-size: .8125em;
	font-weight: 700;
	letter-spacing: .15em;
	text-transform: uppercase;
	padding: 15px 45px;
	-webkit-appearance: button;
	cursor: pointer;
	transition: color .1s ease-in, background-color .1s ease-in;
	border-radius: 0;
	width: 100%;
    background: #C03C43;
}
.contact-form .send-btn:hover{
	background-color: #C03C43;
    color: #fff;
}
::-webkit-input-placeholder {
	color: #aaa;
}

::-moz-placeholder {
	color: #aaa;
}

:-ms-input-placeholder {
	color: #aaa;
}

:-moz-placeholder {
	color: #aaa;
}

@media only screen and (max-width: 1024px) {
	.return-step img {
		margin-left: calc(40% - 62px);
	}
}

@media(max-width:768px) {
	.return-step img {
		margin-left: calc(40% - 52px);
	}
	.return-step-sec .row div.col-sm-6:first-child,
	.return-step-sec .row div.col-sm-6:nth-child(3) {
		padding-left: 6px;
	}
	.return-step-sec .row div.col-sm-6:last-child,
	.return-step-sec .row div.col-sm-6:nth-child(2) {
		padding-right: 6px;
	}
}

@media only screen and (max-width: 767px) {
	.return-step {
		min-height: unset;
	}
	.return-header-text-wrap {
		position: absolute;
		left: 10px;
		top: 30px;
	}
	.returns-page .return-header-text-wrap h1 {
		font-size: 30px;
	}
	.returns-page .return-header-text-wrap p {
		font-size: 14px;
	}
	.returns-page h2,
	.returns-page div:not(.booster--revert)>h2,
	.main-content h2 {
		font-size: 22px;
	}
	.shopify-section .return-step-sec .row div.col-sm-6 {
		padding-left: 0;
		padding-right: 0;
	}
	.page-content-width {
		padding: 0 1.5rem;
	}
}

@media only screen and (min-width: 600px) {
	.page-width {
		padding: 0 20px;
	}
	.shopify-section .return-step-sec .row div.col-sm-6:nth-child(odd) {
		padding-right: 15px;
	}
	.shopify-section .return-step-sec .row div.col-sm-6:nth-child(even) {
		padding-left: 15px;
	}
}

@media only screen and (min-width: 750px) {
	.page-width {
		padding: 0 20px;
	}
}

@media only screen and (min-width: 1024px) {
	.shopify-section .return-step-sec .row div.col-sm-6 {
		padding-right: 15px;
		padding-left: 15px;
	}
	.shopify-section .return-step-sec .row div.col-sm-6:first-child {
		padding-left: 0;
	}
	.shopify-section .return-step-sec .row div.col-sm-6:last-child {
		padding-right: 0;
	}
}

.label-shown{
  width: 100%;
  position: relative;
  padding: 0 0 7px 0;
}

.return-contact-form .row{
  margin-bottom: 16px;
}

.return-contact-form .col-md-6, .return-contact-form .col-md-12{
  flex-direction: column !important;
}