<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing grid">
  <div class="grid__item {% if center_icons %}text-center{% else %}medium-up--two-thirds medium-up--text-right{% endif %}">
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="social-sharing__link share-facebook" title="Share on Facebook">
      {% include 'icon-facebook' %}
      <span class="share-title visually-hidden">Share on Facebook</span>
    </a>

    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="social-sharing__link share-twitter" title="Tweet on Twitter">
      {% include 'icon-twitter' %}
      <span class="share-title visually-hidden">Tweet on Twitter</span>
    </a>

    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="social-sharing__link share-pinterest" title="Pin on Pinterest">
      {% include 'icon-pinterest' %}
      <span class="share-title visually-hidden">Pin on Pinterest</span>
    </a>
  </div>
</div>
<style>
  .social-sharing__link {
    color: #666;
    opacity: .7;
  }
  .social-sharing__link+.social-sharing__link {
    margin-left: 0px;
  }
  .social-sharing .icon {
    display: inline-block;
    vertical-align: middle;
    width: 24px;
    height: 24px;
    fill: currentColor;
  }
  .social-sharing__link:focus, .social-sharing__link:hover {
    opacity: 1;
    color: #c63b3d;
  }
  .social-sharing.grid {
    margin-top: 10px;
  }
</style>