{% if block.settings.customCSS != blank %}
<style>
{% assign scoped = '#block__' | append: section.id | append: '-' | append: block.id %}
{{block.settings.customCSS | replace: '##scoped', scoped}}
</style>
{% endif %}

<div id="block__{{section.id}}-{{block.id}} booster--revert" class="block__html">
{{block.settings.html}}
</div>

{% comment %}
{% blockdef %}
{
    "type": "html",
    "name": "HTML",
    "settings": [
        {
            "type": "checkbox",
            "id": "fullWidth",
            "default": true,
            "label": "Single in row"
        },
        {
            "type": "textarea",
            "id": "html",
            "label": "HTML content"
        },
        {
            "type": "textarea",
            "id": "customCSS",
            "label": "Block scoped CSS",
            "info": "##scoped will be replaced by this block's id, making all CSS under this rule block-scoped."
        }
    ]
}
{% endblockdef %}
{% endcomment %}