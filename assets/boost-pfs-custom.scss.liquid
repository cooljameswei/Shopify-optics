/* BOX */

.boost-pfs-filter-product-item {
	display: inline;
	float: left;
	vertical-align: top;
	margin-bottom: 30px;
	position: relative;
	text-align: left;
	padding-left: 30px;
	/* if value = 0px, please config below bc_layout_no_gutter;
	 */
