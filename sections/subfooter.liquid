{%- if section.blocks.size > 0 -%}
{%style%}
.subfooter { background-color: {{section.settings.fillColor}}; color: {% unless section.settings.contentColor contains 'rgba(0,0,0,0)' %}{{section.settings.contentColor}}{% else %}initial{% endunless %}; font-size: 15px; padding: 16px 0px; }
.subfooter__block { padding: {{section.settings.spacing}}px {{section.settings.spacing}}px; }
{% endstyle %}

{% capture layoutConfig %}{% render 'common-layout' with section as section %}{% endcapture %}

<div class="subfooter inherit layout__{{-layoutConfig}}">
<div class="layout__content row">
{% for block in section.blocks %}
    <div class="col-12 col-md col-md-{{-block.settings.width}} subfooter__block {{block.settings.horizontalAlignment}} {{block.settings.verticalAlignment-}}">
    {% render 'get-block' with block as block %}
    </div>
    {% endfor %}
</div>
</div>

{%- endif -%}

