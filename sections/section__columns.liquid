<style type="text/css">
{% render 'common-css' with section as section %}

#s--{{-section.id}} .columns__column {
    padding: 0px {{section.settings.colGap | divided_by: 2}}px;
    min-height: {{section.settings.colHeight}}px;
    overflow: hidden;
}

#colorcode{}
</style>
 
<div
id="s--{{section.id}}"
{% unless section.settings.backgroundImage == nil -%}{% render 'background', image: section.settings.backgroundImage %}{%- endunless %}
class="{% render 'common-class', section: section, class: 'row section__columns', bg: true %}">
  {% if section.settings.overlayOpacity > 0 %}
    <div
    class="overlay"
    style="opacity: {{section.settings.overlayOpacity | times: 0.01}}; background-color: {{section.settings.overlayColor}};">
    </div>
  {% endif %}
  <div 
  class="row {{ section.settings.horizontalAlignment }} middle s__content layout__content">
    {% render 'block__general--heading' with section as section %}
    {%- for block in section.blocks %}
        <div id="column--{{-block.id}}" class="col-12 s__block s__block--{{-block.type}} {{section.settings.textAlign}} {{section.settings.contentAlign}} columns__column {{section.settings.colCount}}">
            {% render 'get-block' with block as block %}
        </div>
    {% else %}
        {% for i in (1..3) %}
        <div id="column--{{-block.id}}" class="col-12 s__block s__block--{{-block.type}} start middle columns__column col-md-4">
            <div class="column__media col-12" {{block.shopify__attributes}}>
                {{'product-' | append: i | placeholder_svg_tag: 'svg__thumb'}}
            </div>
            <div class="column__text col-12 unflex">
            <h3>Column {{i}}</h3>
            <p>This is a place for all your text.</p>
            </div>
        </div>
        {% endfor %}
    {% endfor %}
  </div>
</div>

