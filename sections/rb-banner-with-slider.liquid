<div class="page-width banner-3-img padding-fix">

  <div class="rb-container">
    <div class="rb-row">
      <div class="rb-col-md-6">
        <div class="rb-banner-with-slider">
         <div class="item-wrap">
           <a href="https://designeroptics.com/collections/ray-ban">
              <img src="{{'RB2283ST.jpg' | asset_url}}" alt="Banner-1"/>
           </a>
         </div>  
         <div class="item-wrap">
           <a href="https://designeroptics.com/collections/ralph-lauren">
              <img src="{{'RL8188Q.jpg' | asset_url}}" alt="Banner-3"/>
           </a>
         </div>
         <div class="item-wrap">
          <a href="https://designeroptics.com/collections/versace">
              <img src="{{'VE2240.jpg' | asset_url}}" alt="Banner-4"/>
           </a>
         </div>
         <div class="item-wrap">
           <a href="https://designeroptics.com/collections/vogue">
              <img src="{{'VO5392S.jpg' | asset_url}}" alt="Banner-5"/>
           </a>
         </div>  
        </div>
      </div>
      <div class="rb-col-md-6">
        <div class="item-slide sunglasses-bg wow animated" style="visibility: visible; background-image:url('{{ section.settings.image_2 | img_url: '600x600' }}')">
          <a href="{{ section.settings.image_2_link }}">
            <span class="wow fadeInUp" data-wow-duratio1="2s" style="visibility: visible; animation-name: fadeInUp;">{{ section.settings.image_2_title }}</span>
          </a>
        </div>
        <div class="item-slide eyeglasses-bg" style="background-image:url('{{ section.settings.image_3 | img_url: '600x600' }}')">
          <a href="{{ section.settings.image_3_link }}">
            <span class="wow fadeInUp" data-wow-duratio1="2s" style="visibility: visible; animation-name: fadeInUp;">{{ section.settings.image_3_title }}</span>

          </a>
        </div>
      </div>
    </div>
  </div>

</div>
<link rel="stylesheet" type="text/css" href="{{'slick.css' | asset_url}}"/>
<link rel="stylesheet" type="text/css" href="{{'slick-theme.css' | asset_url}}"/>  
<script type="text/javascript" src="{{'slick.min.js' | asset_url}}"></script>
<script>
	$('.rb-banner-with-slider').slick({
      	infinite: true,
		autoplay:  true,
		arrows:  true,
		speed: 1000,
	})
</script>
