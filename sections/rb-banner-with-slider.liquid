},
{
"id": "image_2_link",
"type": "url",
"label": "Right Top Link"
},
{
"type": "image_picker",
"id": "image_3",
"label": "Right Bottom Image"
},
{
"type": "text",
"id": "image_3_title",
"label": "Image 3 Title",
"default": "Eyeglasses"
},
{
"id": "image_3_link",
"type": "url",
"label": "Right Bottom Link"
}
],

"presets": [
{
"name": "Slider + Two Images",
"category": "Image"
}
]
}


{% endschema %}
