<div class="page-width">
  <div class="flex flex--grid flex--no-gutter">
    {% assign image_size = '680x' %}
    {% case section.blocks.size %}
    {% when 1 %}
    {% assign flex_size = '' %}
    {% assign image_size = '1140x' %}
    {% when 2 %}
    {% assign flex_size = 'medium-up--one-half' %}
    {% when 3 %}
    {% assign flex_size = 'medium-up--one-third' %}
    {% else %}
    {% assign flex_size = 'small-up--one-half large-up--one-sixth' %}
    {% endcase %}


    {% assign flex_size = 'small--one-half medium-up--one-quarter  large-up--one-tenth' %}
    {% for block in section.blocks %}
    <div class="flex__item flex {{ flex_size }}" {{ block.shopify_attributes }}>
 
          <a href="{{ block.settings.link }}" class="link-block-faq lazyload">
         
          <div class="flex flex--center-vertical">
            <div class="flex__item">
              <div >
              	<img src="{{ block.settings.image | img_url: '300x300' }}"/>
              </div>
              <div >
                <div class="link-block-faq-label">
                  {{ block.settings.cta_label | escape }}
                </div>
                <div class="link-block-faq-description">
                  {{ block.settings.cta_description | escape }}
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>


{% schema %}
  {
    "name": "FAQ Categories",
    "settings": [],
      "max_blocks": 10,
      "blocks": [
        {
          "type": "link_block",
          "name": "Link block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link"
            },
            {
              "type": "text",
              "id": "cta_label",
              "label": "Link label",
              "default": "Link label"
            },
            {
              "type": "text",
              "id": "cta_description",
              "label": "Link Description",
              "default": "Link Description"
            }
          ]
        }
      ]
  }
{% endschema %}

