    #s--{{section.id}} .tximage__image .side-image{
        position: absolute;
        z-index:99;
        {% if section.settings.imagePosition == "right" %}    
            top: -28px;
            right: -26px;
        {% else %}
            bottom: -32px;
            right: -30px;
        {% endif %}  
