        display: flex;
        align-items: center;
        justify-content: space-between;
        cursor:pointer;
        font-weight: 700;
    }

    .faq-accordion .item .title .icon {
        display: inline-block;
        vertical-align: middle;
        width: 16px;
        height: 100%;
    }

    .faq-accordion .item .title span.icon img {
        display: block;
        max-width: 16px;
    }
    .faq-accordion .item .title span.icon img:first-child {
        display: none;
    }
    .faq-accordion .item .title.active span.icon img:first-child {
        display: block;
    }  
    .faq-accordion .item .title.active span.icon img:last-child {
        display: none;
