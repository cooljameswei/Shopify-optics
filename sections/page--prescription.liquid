<div class="page-width custom-pres-page-section">
  <h1 class="page-prescription-title">
    {{ page.title }}
    {% if section.settings.display_title_underline %}
    <div>
      <img class="img-responsive center-line" 
           src="https://cdn.shopify.com/s/files/1/2807/8986/files/Prescriptions-underline_300x_615a738b-521a-4f46-924c-af1472bd33a3.png?216" />
    </div>
    {% endif %}
  </h1>
  <div class="content-block">
    <div class="rte rte--indented-images">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Section name",
    "settings": [  {
		"type": "checkbox",
		"id": "display_title_underline",
		"label": "Enable Title Underline Image",
		"default": true
	  }],
    "presets": [
		{
			"category": "custom-page-sections",
			"name": "Page Prescription"
		}
	]
  }
{% endschema %}

<style>
  
  .main-content {
    margin-top: 30px;
  }
  
  .custom-pres-page-section.page-width {
    /*------As per the new requiremnet TW#33265426-----*/
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 10px;
  }
  
  .custom-pres-page-section .page-prescription-title {
    font-weight: 700;
    text-align: center!important;
    font-family: Lato,sans-serif;
    color: #030303;
    margin: 0 0 .625em;
  }
  
  .custom-pres-page-section h1 {
    color: #030303;
    margin: 0 0 .625em;
  }
  
  .custom-pres-page-section .content-block {
    background-color: #fff;
    padding: 40px;
    margin-bottom: 20px;
    
    font-size: 16px;
    font-family: Karla,HelveticaNeue,"Helvetica Neue",sans-serif;
    color: #666;
    line-height: 1.375;
  }
  
  .custom-pres-page-section .prescription-main {
    text-align: center;
    margin-bottom: 50px;
    font-family: Lato,sans-serif;
  }
  
  .custom-pres-page-section .prescription-main h3 {
    font-size: 24px;
    font-family: Lato,sans-serif;
    margin-top: 0;
    font-weight: 700;
    color: #030303;
    margin: 0 0 .625em;
    line-height: 1.1;
    text-align: center;
  }
  
  .custom-pres-page-section .prescription-main p {
    font-size: 18px;
    font-family: Lato,sans-serif;
    margin: 0;
    color: #666;
    line-height: 1.375;
  }
  
  .custom-pres-page-section ul.j-accordion {
    list-style: none;
    padding: 0;
    margin: 0;
    font-family: Lato,sans-serif;
  }
  
  .custom-pres-page-section ul.j-accordion li {
  	margin: .2em 0;
  }
  
  .custom-pres-page-section ul.j-accordion li a.j-item {
    width: 100%;
    display: block;
    background: #aaa;
    color: #fefefe;
    padding: .5em .75em;
    padding-right: 30%;
    transition: background .3s ease;
    font-weight: 700;
    position: relative;
    text-decoration: none;
  }
  
  .custom-pres-page-section ul.j-accordion li .j-item:after {
    font-family: "Font Awesome 5 Pro";
    font-weight: 700;
    font-size: 20px;
    color: #fff;
    content: "\f35b";
    position: absolute;
    right: 10px;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }
  
  .custom-pres-page-section ul.j-accordion li a.j-item:hover {
    background: #7c7c7c;
    text-decoration: none;
    cursor: pointer;
    color: #fff !important;
  }
  
  .custom-pres-page-section ul.j-accordion li a.j-item.open {
    background: #c63b3d;
  }
  
  .custom-pres-page-section ul.j-accordion li a.j-item.open:after {
    content: "\f358";
  }
  
  .custom-pres-page-section ul.j-accordion li a.j-item.open:hover {
    background: #aa3436;
  }
  
  .custom-pres-page-section  ul.j-accordion li .j-inner {
    padding: 15px;
    background-color: #f4f4f4;
    border: 1px solid #d7d7d7;
    overflow: hidden;
    display: none;
    font-size: 16px;
    line-height: 18px;
  }
  
  .custom-pres-page-section .j-accordion .med-50 {
    width: 50%;
  }
  
  .custom-pres-page-section .j-accordion .left {
    float: left;
    padding-right: 15px;
  }
  
  .custom-pres-page-section .j-accordion .right {
    float: right;
  }
  
  .custom-pres-page-section .j-accordion p {
    margin: 0 0 20px;
    color: #666;
    line-height: 18px;
  }
  
  .custom-pres-page-section .j-accordion p:last-child {
    margin-bottom: 0;
  }
  
  .custom-pres-page-section .j-accordion .video-wrapper {
    margin-top: 50px;
    position: relative;
    overflow: hidden;
    max-width: 100%;
    padding-bottom: 56.25%;
    height: auto;
  }
  
  .custom-pres-page-section .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .down-arrow{
    display:none;
  	background-color: white;
    padding: 4px;
    border-radius: 50%;
    border: 1px solid #c73c3b;
    width: 20px;
  }
  .j-item.open.down-arrow{
  	display:block;
  }
  .j-item.open.up-arrow{
  	display:none;
  }
  .up-arrow{
  	background-color: white;
    padding: 4px;
    border-radius: 50%;
    border: 1px solid #aaa;
    width: 20px;
  }
  .j-inner .right.med-50{
  	margin-top: 25px;
  }
  .right.med-50 iframe{
  	height:100%;
  }
  @media only screen and (max-width: 1200px) {
    .custom-pres-page-section .j-accordion .med-50 {
      width: 100%;
    }
    .custom-pres-page-section .j-accordion .left, .custom-pres-page-section .j-accordion .right{
      float: none;
      padding: 0;
    }
  }
  @media(min-width: 300px){
  	.j-inner .right.med-50{
  		height:300px;
    }
  }
  @media(min-width: 750px) {
    .custom-pres-page-section.page-width {
      padding: 0 20px;
    }
    .custom-pres-page-section h1 {
      font-size: 2.25em;
      line-height: 1.1;
    }
  }
  @media(min-width:768px){
  	.j-inner .right.med-50{
  		height:420px;
    }
  }
  @media(min-width:991px){
  	.j-inner .right.med-50{
  		height:472px;
    }
  }
  @media(min-width:1200px){
    .j-inner .right.med-50{
      height:323px;
    }
  }  
</style>

<script type="text/javascript">
  $(document).ready(function () {
    $('.j-accordion .j-item').click(function (e) {
      e.preventDefault();
      var $this = $(this);
      if ($this.hasClass('open')) {
        $this.removeClass('open');
        $this.next().slideUp(350);
      } else {
        $this.parent().parent().find('.j-item').removeClass('open');
        $this.parent().parent().find('li .j-inner').slideUp(350);
        $this.toggleClass('open');
        $this.next().slideToggle(350);
      }
    });
    $(".j-accordion .open").next().slideDown(350);
  });
</script>
