              <img width="35" height="22" loading="lazy" class="money-icon lazyload" data-src="{{ block.settings.mimage2 | img_url }}" alt="{{block.settings.mimage_alt2}}" />
              <img width="35" height="22" loading="lazy" class="money-icon lazyload" data-src="{{ block.settings.mimage3 | img_url }}" alt="{{block.settings.mimage_alt3}}" />
              <img width="35" height="22" loading="lazy" class="money-icon lazyload" data-src="{{ block.settings.mimage4 | img_url }}" alt="{{block.settings.mimage_alt4}}" />
              <img width="35" height="22" loading="lazy" class="money-icon lazyload" data-src="{{ block.settings.mimage5 | img_url }}" alt="{{block.settings.mimage_alt5}}" />
              <img width="35" height="22" loading="lazy" class="money-icon lazyload" data-src="{{ block.settings.mimage6 | img_url }}" alt="{{block.settings.mimage_alt6}}" />
            {% endcase %}
            {% endfor %}
