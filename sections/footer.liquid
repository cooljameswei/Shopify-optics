<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}" media="print" onload="this.media='all'">
<footer style="background-color:black;"
        class="site-footer {% if page.handle == 'locations' %}location-page-content{% endif %}" 
        role="contentinfo">
  <div class="page-width-full">
    <div class="flex-footer" data-type="">
      <div class="top-footer">
        <div class="page-width-full newsletter-align">
          <div class="newsletter-label">Join the exclusive Club</div>
          <div class="klaviyo-container">
            <div class="klaviyo-form-RQkwep"></div>
          </div>
        </div>
      </div>
      <div class="middle-footer">
        <div class="middle-footer-one">
          {% for block in section.blocks %}
          {% if block.type == 'text' %}
          <div class="company-info">
            <h4 class="h1 site-footer__section-title" style="display:none;">{{ block.settings.title }}</h4>
            <img width="{{block.settings.image.width}}" height="{{block.settings.image.height}}"
                 loading="lazy"
                 class="lazyload" data-src="{{ block.settings.image | img_url: 'master' }}" alt="" />
            <div class="info-para">
              {{ block.settings.text }}
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
        <div class="middle-footer-two">
          {% for block in section.blocks %}
          {% if block.type == 'menu' %}
          <div class="menu-list-container">
            {% if linklists[block.settings.link_list].links.size > 0 %}
            <h4 class="h1 site-footer__section-title">{{ linklists[block.settings.link_list].title }}</h4>
            <ul class="site-footer__list">
              {% for link in linklists[block.settings.link_list].links %}
              <li class="site-footer__list-item">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
          {% endif %}
          {% endfor %}
          <div class="menu-list-container seal-container">
          	<!--<a href="https://www.usa-proxy.org/browse.php?u=https%3A%2F%2Fwww.bbb.org%2Fus%2Fny%2Fbrooklyn%2Fprofile%2Fretail-optical-goods%2Fdesigner-optics-corp-0121-145565%2F&b=4#sealclick" target="_blank" rel="nofollow"><img src="https://www.usa-proxy.org/browse.php?u=https%3A%2F%2Fseal-newyork.bbb.org%2Fseals%2Fblue-seal-187-130-whitetxt-bbb-145565.png&b=4" style="border: 0;" alt="Designer Optics Corp. BBB Business Review" /></a>-->
          	<img loading="lazy" data-src="{{'BBB-logo.png' | asset_img_url:'master'}}" alt="BBB Logo"  class="bbb-seal-desktop lazyload"/>
            <img loading="lazy" data-src="{{'BBB-logo-mob.png' | asset_img_url:'master'}}" alt="BBB Logo"  class="bbb-seal-mob lazyload"/>
          </div>
        </div>
      </div>
      <div class="social-footer">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'footerSocial' %}
              {% if block.settings.heading != blank %}
              <div class="left-content">
                <h4 class="h1">{{ block.settings.heading }}</h4>
              </div>
              {% endif %}
              <div class="right-content">
                {%- assign socialMedia = 'Facebook,Instagram,Twitter,Whatsapp,We,Youtube,Snapchat,Viber,VK,DA,TikTok,Twitch,Linkedin,Pinterest,Truthsocial' | split: ',' -%}
                {%- for social in socialMedia -%}
                    {%- assign prop = social | prepend: 's' -%}
                    {%- if settings[prop] != blank -%}
                        {%- assign name = social | downcase -%}
                        {%- assign SocialIcon = social | prepend: 's' | append: 'Icon' -%}

                        <a class="icon-link" target="_blank" href="{{settings[prop]}}">
                          {% if settings[SocialIcon] != blank %}
                          {{ settings[SocialIcon] }}
                          {% else %}
                            {% render 'get-icon' with name as icon %}
                          {% endif %}
                        </a>
                    {%- endif -%}
                {%- endfor -%}
              </div>
              
          {% endcase %}
        {% endfor %}
      </div>
      <div class="middle-footer-web-address">
        <ul class="middle-footer-w-a-list">
          {% for block in section.blocks %}
          {% case block.type %}
          {% when 'Company_Information' %}
          <li class="middle-footer-w-a-listitem"><p><a href="{{ block.settings.curl }}">{{ block.settings.ctext }}</a></p></li>
          <li class="middle-footer-w-a-listitem"><p><a href="{{ block.settings.curl1 }}">{{ block.settings.ctext1 }}</a></p></li>
          <li class="middle-footer-w-a-listitem"><p><a href="{{ block.settings.curl2 }}">{{ block.settings.ctext2 }}</a></p></li>
          {% endcase %}
		  {% endfor %}
        </ul>
      </div>
    </div>
    <div class="bottom-footer">
      <div class="site-footer__copyright">
        <div class="page-width-full">
          <div class="grid medium-up--grid--table">
            <div class="grid__item medium-up--one-half">
              <small>&copy; {{ 'now' | date: "%Y" }}, {{ 'DesignerOptics.com'| link_to: '/' }}. All rights
