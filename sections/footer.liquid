      </div>
    </div>
  </div>
</footer>
<script defer>
  $(document).ready(function () {
    $(".menu-list-container h4").append('<span class="plusminus">+</span>');
    $(".site-footer__section-title").click(function () {
      if ($('.site-footer__list').is(':visible')) {
        $(".site-footer__list").slideUp(300);
        $(".plusminus").text('+');
      }
      if ($(this).next(".site-footer__list").is(':visible')) {
        $(this).next(".site-footer__list").slideUp(300);
        $(this).children(".plusminus").text('+');
      } else {
        $(this).next(".site-footer__list").slideDown(300);
        $(this).children(".plusminus").text('-');
      }
    });
    $( "input[placeholder='Date of Birth']").attr("type","date");
  });
</script>

