<div class="page-width customer-login">
  <div class="grid">
    <div class="grid__item-two grid__item">
      <div class="content-block text-center">
        <div class="form-success-link">
          {% form 'recover_customer_password' %} {{ form.errors | default_errors }}
          {% if form.posted_successfully? %}
          <div class="form-success">  
            <span>We've sent you an email with a link to update your password.</span>
          </div>
          {% endif %}
          {% endform %} 
        </div>

        <div id="CustomerLoginForm" class="customer-login-form">
          {% form 'customer_login' %}
          <h4>{{ 'customer_area.forms.sign_in_title' | t }}</h4>
          <p class="customer-login-desc">
            {{section.settings.welcome_text}}
          </p>

          {{ form.errors | default_errors }}

          <input type="email" name="customer[email]" id="customer_email" class="{% if form.errors contains 'email' %} input--error{% endif %}" placeholder="{{ 'customer_area.forms.email' | t }}" autocorrect="off" autocapitalize="off" autofocus required>
          {% if form.password_needed %}
          <input type="password" value="" name="customer[password]" id="CustomerPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}" placeholder="{{ 'customer_area.forms.password' | t }}" required>
          {% endif %}

          <p id="forgot-text" class="forgot-text" onClick="document.body.classList.add('forgot_page_active')">Forgot your password?</p>
          <p>
            <input type="submit" class="btn login-submit-btn" value="{{ 'customer_area.forms.login' | t }}">
          </p>
          <div style="margin-bottom:10px;">
            <div class="one-click-social-login"></div>
          </div>
          <p id="customer_register_link">Donâ€™t Have an account? <u>{{ 'customer_area.forms.register' | t | customer_register_link }}</u></p>
          {% endform %}
        </div>

        <div id="RecoverPasswordForm" class="hide-area">

          <div>
            {% form 'recover_customer_password' %} 
            <input type="checkbox" id="recover">
            <div class="recover__password">
              <h2>Reset your password</h2>
              <p class="recover-title-text">We will send you an email to reset your password.</p>
              <input type="email" name="email" placeholder="Email"/>
              <input class="button" type="submit" value="SUBMIT" />
              <p id="forgot-cancel" class="forgot-cancel" onClick="document.body.classList.remove('forgot_page_active')">Cancel</p>
            </div>

            {% endform %} 
          </div>

        </div>

      </div>
      {% if shop.checkout.guest_login %}
      <div class="content-block text-center" class="mt-30">
		<div class="customer-login-form">
          {% form 'guest_login' %}
          <h4>Continue as a guest</h4>
          <p><input type="submit" class="btn" value="Continue"></p>
          {% endform %}
        </div>
      </div>
      {% endif %}
    </div>

  </div>
</div>



